# Convex Configuration
# Get these from your Convex dashboard at https://dashboard.convex.dev
CONVEX_DEPLOYMENT=your_convex_deployment_here
NEXT_PUBLIC_CONVEX_URL=https://your-convex-url.convex.cloud

# Clerk Authentication & Billing
# Get these from your Clerk dashboard at https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk Frontend API URL
# This comes from your JWT template in Clerk dashboard (create a template named "convex")
NEXT_PUBLIC_CLERK_FRONTEND_API_URL=https://your-clerk-frontend-api-url.clerk.accounts.dev

# Clerk Redirect URLs
# These ensure users are redirected to dashboard after authentication
NEXT_PUBLIC_CLERK_SIGNIN_REDIRECT=/dashboard
NEXT_PUBLIC_CLERK_SIGNUP_REDIRECT=/dashboard
NEXT_PUBLIC_CLERK_SIGNIN_FALLBACK=/dashboard
NEXT_PUBLIC_CLERK_SIGNUP_FALLBACK=/dashboard

# Note: CLERK_WEBHOOK_SECRET should be set in your Convex dashboard environment variables
# Do not add it to this .env.local file

# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Site information for OpenRouter rankings
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=ZoomJudge

# Resend Email Configuration
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
# Your verified domain in Resend (e.g., zoomjudge.com)
RESEND_FROM_DOMAIN=zoomjudge.com
# From email address for transactional emails
RESEND_FROM_EMAIL=noreply@zoomjudge.com
